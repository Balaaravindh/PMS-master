<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".Activity.PrePollDayActivity">


    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/back"
                    app:tint="@color/new_bg" />

            </RelativeLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/title_text"
                android:visibility="gone"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/pre_poll_day"
                android:textAllCaps="true"
                android:textColor="@color/new_bg"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/home"
                app:tint="@color/new_bg" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view_white"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header_layout"
        android:background="@color/edit_text_bg" />

    <TextView
        android:id="@+id/pollday_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/opensans_regular"
        android:padding="10dp"
        android:text="@string/pre_poll_day_information"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/y_n_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/pollday_text"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">

        <TextView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_toLeftOf="@+id/no"
            android:fontFamily="@font/opensans_regular"
            android:padding="5dp"
            android:text="@string/y"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/opensans_regular"
            android:padding="5dp"
            android:text="@string/n"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y_n_layout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/polling_party_btn"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/polling_party_reached"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/polling_material_btn"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_below="@+id/polling_party_btn"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/polling_material_reached"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yes_no_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y_n_layout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">

        <View
            android:layout_width="1dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/check_yes_1"
            android:background="@color/edit_text_bg" />

        <RelativeLayout
            android:id="@+id/check_yes_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/check_no_1"
            android:background="@drawable/image_bg_checkbox">

            <ImageView
                android:id="@+id/check_image_yes_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@mipmap/tick" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/check_no_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_bg_checkbox">

            <ImageView
                android:id="@+id/check_image_no_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@mipmap/cancel" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/check_yes_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/check_yes_1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="62dp"
            android:layout_toLeftOf="@+id/check_no_2"
            android:background="@drawable/image_bg_checkbox">

            <ImageView
                android:id="@+id/check_image_yes_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@mipmap/tick" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/check_no_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/check_no_1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/image_bg_checkbox">

            <ImageView
                android:id="@+id/check_image_no_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@mipmap/cancel" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/yes_no_layout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>